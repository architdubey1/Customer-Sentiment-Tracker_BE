# App
NODE_ENV=development
PORT=5001

# MongoDB
MONGO_URI=mongodb://localhost:27017/sentiment-tracker

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (for call recording transcription via Whisper)
OPENAI_API_KEY=

# Gmail API (OAuth2)
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# Email Polling
AUTOMATE_POLLING=false
POLL_INTERVAL_MINUTES=5

# Auto-reply to critical priority emails
AUTO_REPLY_ENABLED=false

# API Security
API_KEY=

# Dashboard auth (JWT). Set a strong secret in production.
JWT_SECRET=your_jwt_secret_here
# Set to true to auto-create admin user (username: admin, password: password) on startup
SEED_ADMIN_USER=false

# PII Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=

# Slack Webhook (optional, for critical alerts)
SLACK_WEBHOOK_URL=
